@using Microsoft.AspNetCore.Identity

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager


    @if (SignInManager.IsSignedIn(User))
    {
        <ul class="navbar-nav">
            <li>
                <a asp-controller="Admin" asp-action="Index"><img src="~/frontend/Logo.jpg" alt=”Image” style="width:40px; height:40px;position:absolute; top:10px; left:10px"></a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#">Hello @UserManager.GetUserName(User)</a>
            </li>
            <li class="nav-item">
                <form id="logoutForm" method="post" class="form-inline" asp-controller="Account" asp-action="LogOff">
                    <button type="submit" class="btn nav-link">LogOut</button>
                </form>           
            </li>
        </ul>
            
    }
    else
    {
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link" asp-controller="Account" asp-action="Register">Register</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-controller="Account" asp-action="Login">Login</a>
            </li>
        </ul>
    }
   


